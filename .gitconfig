[user]
	name = shiming
	email = codingmylife@gmail.com
[core]
	autocrlf = input
	quotepath = false
    editor = /usr/bin/vim
[alias]
    merge2 = "!f() { git checkout $1 && git merge $2 && git checkout -; }; f"
    au = add -u
    co = checkout
    cm = commit -m 
    st = status
    br = branch
[push]
	default = current
[merge]
    tool = vimdiff
